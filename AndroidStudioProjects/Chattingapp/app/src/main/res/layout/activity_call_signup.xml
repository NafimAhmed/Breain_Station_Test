<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CallSignup_Activity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearHeadder"
        android:padding="@dimen/_8sdp"

        >

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="left"
            android:id="@+id/imageBack"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/teal_200"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Signup"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/ubuntu_bold"
            ></TextView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearHeadder"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/_20sdp"
                android:text="we need a few detail"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/black"
                ></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_4sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="First Name"
                        android:textSize="@dimen/_11ssp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:id="@+id/inputFirstname"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="you name"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_13ssp"
                        ></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="Last Name"
                        android:textSize="@dimen/_11ssp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:id="@+id/inputLastName"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="you last name"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_13ssp"
                        ></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="Email"
                        android:textSize="@dimen/_11ssp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:id="@+id/inputEmail"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="you@Example.com"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_13ssp"
                        ></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="Password"
                        android:textSize="@dimen/_11ssp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:id="@+id/inputPassword"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="@string/Password_Hints"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_13ssp"
                        ></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:includeFontPadding="false"
                        android:text="Confirm Password"
                        android:textSize="@dimen/_11ssp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:id="@+id/inputConfirmPassword"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="@string/Password_Hints"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_13ssp"
                        ></EditText>








                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >





            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/buttonSignUp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_20sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:includeFontPadding="false"
                android:text="sign Up"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintTop_toBottomOf="@+id/cardSignIn"
                ></com.google.android.material.button.MaterialButton>

                <ProgressBar
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:id="@+id/SignupProgressBar"

                    ></ProgressBar>

            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/textSignIn"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:textColor="#E31414"
                android:layout_margin="@dimen/_20sdp"
                android:text="Already have account ????? \n Sign In"
                android:textSize="@dimen/_12sdp"
                ></TextView>





        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>