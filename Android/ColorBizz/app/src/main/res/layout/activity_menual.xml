<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menual">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" How to use the app :\n\n"
                android:textStyle="bold"
                android:textSize="25dp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step1 : Choose the write option"
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/ss_home"></ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step2 : Choose a phote "
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/ss_take_photo"></ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/take_photo"></ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step3 : Crope the photo and focus to the main color"
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/crope"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step4 : click the tik button"
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/tik3"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step5 : Click the check button"
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/pre_res2"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step6 : then you can see the result"
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/pre_res"></ImageView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>